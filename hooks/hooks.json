{
  "version": "3.0.0",
  "description": "Wolf Pack Hook 配置 - 使用 JavaScript 实现跨平台 hook",
  "shell": "node",
  "extension": ".js",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume|clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/session-start.js\""
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/session-end.js\""
          }
        ]
      }
    ]
  }
}
